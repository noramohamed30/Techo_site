---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Home">
  <main>
    <!-- Hero Section -->
    <div class="bg-gradient-to-r from-primary to-secondary">
      <div class="max-w-7xl mx-auto py-20 px-4 sm:px-6 lg:px-8 text-center">
        <h1 class="text-4xl font-bold text-white mb-4">
          Innovative Technical Solutions for Your Business
        </h1>
        <p class="text-xl text-white mb-8">
          We help businesses transform through cutting-edge technology
        </p>
        <a
          href="/contact"
          class="bg-white text-primary px-8 py-3 rounded-lg font-semibold hover:bg-gray-100 transition"
          >Get Started</a
        >
      </div>
    </div>

    <!-- Services Section -->
    <div class="max-w-7xl mx-auto py-16 px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-center mb-12">Our Services</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="bg-white p-6 rounded-lg shadow-md">
          <h3 class="text-xl font-semibold mb-4">Cloud Solutions</h3>
          <p class="text-gray-600">
            Scalable and secure cloud infrastructure for your growing business needs.
          </p>
        </div>
        <div class="bg-white p-6 rounded-lg shadow-md">
          <h3 class="text-xl font-semibold mb-4">Software Development</h3>
          <p class="text-gray-600">
            Custom software solutions tailored to your specific requirements.
          </p>
        </div>
        <div class="bg-white p-6 rounded-lg shadow-md">
          <h3 class="text-xl font-semibold mb-4">IT Consulting</h3>
          <p class="text-gray-600">
            Expert guidance to help you make informed technology decisions.
          </p>
        </div>
      </div>
    </div>

    <!-- Why Choose Us Section -->
    <div class="bg-gray-100">
      <div class="max-w-7xl mx-auto py-16 px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl font-bold text-center mb-12">Why Choose Techo</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
          <div class="text-center">
            <div class="text-4xl font-bold text-primary mb-2">10+</div>
            <div class="text-gray-600">Years Experience</div>
          </div>
          <div class="text-center">
            <div class="text-4xl font-bold text-primary mb-2">200+</div>
            <div class="text-gray-600">Projects Completed</div>
          </div>
          <div class="text-center">
            <div class="text-4xl font-bold text-primary mb-2">50+</div>
            <div class="text-gray-600">Expert Team Members</div>
          </div>
          <div class="text-center">
            <div class="text-4xl font-bold text-primary mb-2">99%</div>
            <div class="text-gray-600">Client Satisfaction</div>
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout>