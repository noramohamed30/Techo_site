---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} - Techo Solutions</title>
  </head>
  <body class="min-h-screen bg-gray-50">
    <nav class="bg-white shadow-md">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between h-16">
          <div class="flex w-full justify-between">
            <div class="flex-shrink-0 flex items-center">
              <a href="/" class="text-2xl font-bold text-primary">Techo</a>
            </div>
            <!-- Desktop Navigation -->
            <div class="hidden sm:ml-6 sm:flex sm:space-x-8">
              <a href="/contact" class={`inline-flex items-center px-1 pt-1 border-b-2 ${Astro.url.pathname === "/contact" ? "border-primary text-gray-900" : "border-transparent text-gray-500 hover:text-gray-900"}`}>Contact</a>
              <a href="/about" class={`inline-flex items-center px-1 pt-1 border-b-2 ${Astro.url.pathname === "/about" ? "border-primary text-gray-900" : "border-transparent text-gray-500 hover:text-gray-900"}`}>About</a>
              <a href="/services" class={`inline-flex items-center px-1 pt-1 border-b-2 ${Astro.url.pathname === "/services" ? "border-primary text-gray-900" : "border-transparent text-gray-500 hover:text-gray-900"}`}>Services</a>
              <a href="/" class={`inline-flex items-center px-1 pt-1 border-b-2 ${Astro.url.pathname === "/" ? "border-primary text-gray-900" : "border-transparent text-gray-500 hover:text-gray-900"}`}>Home</a>
            </div>
            <!-- Mobile menu button -->
            <div class="sm:hidden flex items-center">
              <button type="button" id="mobile-menu-button" class="inline-flex items-center justify-center p-2 rounded-md text-gray-400 hover:text-gray-500 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-primary">
                <span class="sr-only">Open main menu</span>
                <svg class="block h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                </svg>
              </button>
            </div>
          </div>
        </div>
        <!-- Mobile Navigation -->
        <div class="sm:hidden hidden" id="mobile-menu">
          <div class="pt-2 pb-3 space-y-1">
            <a href="/contact" class={`block pl-3 pr-4 py-2 border-l-4 text-base font-medium ${Astro.url.pathname === "/contact" ? "border-primary text-primary bg-primary-50" : "border-transparent text-gray-500 hover:bg-gray-50 hover:border-gray-300 hover:text-gray-700"}`}>Contact</a>
            <a href="/about" class={`block pl-3 pr-4 py-2 border-l-4 text-base font-medium ${Astro.url.pathname === "/about" ? "border-primary text-primary bg-primary-50" : "border-transparent text-gray-500 hover:bg-gray-50 hover:border-gray-300 hover:text-gray-700"}`}>About</a>
            <a href="/services" class={`block pl-3 pr-4 py-2 border-l-4 text-base font-medium ${Astro.url.pathname === "/services" ? "border-primary text-primary bg-primary-50" : "border-transparent text-gray-500 hover:bg-gray-50 hover:border-gray-300 hover:text-gray-700"}`}>Services</a>
            <a href="/" class={`block pl-3 pr-4 py-2 border-l-4 text-base font-medium ${Astro.url.pathname === "/" ? "border-primary text-primary bg-primary-50" : "border-transparent text-gray-500 hover:bg-gray-50 hover:border-gray-300 hover:text-gray-700"}`}>Home</a>
          </div>
        </div>
      </div>
    </nav>
    <slot />
    <footer class="bg-gray-800 text-white mt-20">
      <div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div>
            <h3 class="text-xl font-bold mb-4">Techo Solutions</h3>
            <p class="text-gray-300">Empowering businesses through innovative technical solutions.</p>
          </div>
          <div>
            <h3 class="text-xl font-bold mb-4">Contact</h3>
            <p class="text-gray-300">Email: info@techo.com</p>
            <p class="text-gray-300">Phone: (800) 123-4567</p>
          </div>
          <div>
            <h3 class="text-xl font-bold mb-4">Follow Us</h3>
            <div class="flex space-x-4">
              <a href="#" class="text-gray-300 hover:text-white">LinkedIn</a>
              <a href="#" class="text-gray-300 hover:text-white">Twitter</a>
              <a href="#" class="text-gray-300 hover:text-white">GitHub</a>
            </div>
          </div>
        </div>
      </div>
    </footer>

    <script>
      const mobileMenuButton = document.getElementById('mobile-menu-button');
      const mobileMenu = document.getElementById('mobile-menu');

      mobileMenuButton?.addEventListener('click', () => {
        mobileMenu?.classList.toggle('hidden');
      });
    </script>
  </body>
</html>